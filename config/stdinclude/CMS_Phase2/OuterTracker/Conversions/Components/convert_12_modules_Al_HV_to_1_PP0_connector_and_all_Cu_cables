// CONVERSION
// Scaled on HV input.
// THIS CORRESPONDS TO 1 PP0 CONNECTOR, AND ALL THE CU CABLES ROUTED TOWARDS PP1.


  Conversion {
    // 10 modules worth of Al_HV
    Input {
      Element {
        elementName Al_HV
        quantity 1.857573         // Actually, only convert 10 modules worth of Al_HV, as on average the power cabling occupancy is ~90%.
        unit g/m
      }
    }
    
    
    
    // THIS GATHERS ALL THE CU CABLES ROUTED OUT OF A PP0 CONNECTOR, SERVING 12 MODULES.

    // AWG22: 0.326 mm2 metal cross-section.    
    // Number of AWG22 Cu cables : 2x10 (2 per module) = 20 cables.

    // AWG28: 0.081 mm2 metal cross-section.   
    // Number of AWG28 Cu cables : 10 (1 per module) + 4 (temperature lines) = 14 cables.
    Output {
      Element {
        componentName "Cabling: Power cables from PP0 towards PP1"
        elementName Cu
        quantity 68.57984   // = 8.96 g/cm3 (Cu density) x (20 (20 wires) x 0.326 mm2 (metal cross-section) + 14 (14 wires) x 0.081 mm2 (metal cross-section))
        unit g/m
        service true
      }
      // Isolant
      // TO DO: this has not been updated. Unclear what the isolant thickness is.
      // To me, seems order of magnitude too much though!!
      Element {
        componentName "Cabling: Power cables from PP0 towards PP1"
        elementName PE
        quantity 90
        unit g/m
        service true
      }
      
      
      
      // 2 connectors: 1 for LV + 1 for HV
      // TO DO: NOT UPDATED!!! SHOULD DEFINITELY BE REVISED!!
      // Connectors same as 1-rod connector from http://cern.ch/go/P9bG
      // Binder connectors: Micro-T connectors - series 910 
      Element {
        componentName "Cabling: OT powering PP0 connector"
        elementName Cu
        quantity 4.5     // (2.7 g LV + 1.8 g HV)
        unit g
        service false
      }
      Element {
        componentName "Cabling: OT powering PP0 connector"
        elementName PE   // (2.2 g LV + 1.6 g HV)
        quantity 3.8
        unit g
        service false
      }
    }
    
  }
